From: Sebastiaan Pasterkamp
 <26205277+SebastiaanPasterkamp@users.noreply.github.com>
Date: Fri, 11 Jun 2021 22:38:31 +0200
Subject: [PATCH] Dockerfile: update to use drone plugin.sh

---
 Dockerfile | 5 +++--
 1 file changed, 3 insertions(+), 2 deletions(-)

diff --git a/Dockerfile b/Dockerfile
index 4d0aac21..f5fcca57 100644
--- a/Dockerfile
+++ b/Dockerfile
@@ -37,6 +37,7 @@ RUN apk add --no-cache git pigz
 COPY --from=img /usr/bin/img /usr/bin/img
 COPY --from=idmap /usr/bin/newuidmap /usr/bin/newuidmap
 COPY --from=idmap /usr/bin/newgidmap /usr/bin/newgidmap
+COPY plugin.sh /drone/
 
 RUN chmod u+s /usr/bin/newuidmap /usr/bin/newgidmap \
   && adduser -D -u 1000 user \
@@ -52,5 +53,5 @@ USER user
 ENV USER user
 ENV HOME /home/user
 ENV XDG_RUNTIME_DIR=/run/user/1000
-ENTRYPOINT [ "img" ]
-CMD [ "--help" ]
+ENTRYPOINT [ "/bin/sh" ]
+CMD [ "/drone/plugin.sh" ]
